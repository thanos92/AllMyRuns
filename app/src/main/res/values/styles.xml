<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button.Start" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/materialGreen</item>
        <item name="android:textColor">@color/materialWhite</item>
    </style>
    <style name="AppTheme.Button.Stop" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/materialRed</item>
        <item name="android:textColor">@color/materialWhite</item>
    </style>

</resources>
